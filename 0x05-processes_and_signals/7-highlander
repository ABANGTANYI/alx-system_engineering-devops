#!/usr/bin/env bash

# Run the 4-to_infinity_and_beyond or 7-highlander script in the background
./4-to_infinity_and_beyond &  # or ./7-highlander &

# Save the PID of the background process
pid=$!

# Function to handle SIGTERM signal
handle_sigterm() {
    echo "I am invincible!!!"
    exit 0
}

# Register the SIGTERM signal handler
trap handle_sigterm SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
